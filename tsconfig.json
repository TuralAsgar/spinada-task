{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./",
        "sourceMap": true,
        "types": ["node"],
        "lib": ["ESNext", "DOM"],
        "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules", "dist", "scripts/**/*"]
}
